{
    "compileOnSave": false,
    "exclude": [
        "**/*.spec.ts",
        "**/test.ts",
        "**/polyfills.ts"
    ],
    "compilerOptions": {
        "outDir": "./dist/",
        "baseUrl": "./src",
        "sourceMap": true,
        "declaration": true,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "traceResolution": false,
        "target": "es5",
        "typeRoots": [
            "typings.d.ts",
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom"
        ],
        "paths": {
            "@angular/*": ["../node_modules/@angular/*"],
            "rxjs/*": ["../node_modules/rxjs/*"],
            "xxxxx*": [ "../node_modules/*", "*"]
        }
    }
}
