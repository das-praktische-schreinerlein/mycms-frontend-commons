{
    "compilerOptions": {
        "sourceMap": false,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "dom"
        ],
        "outDir": "tsc-out/spec",
        "module": "commonjs",
        "target": "es5",
        "baseUrl": "./src",
        "types": [
            "jasmine",
            "node"
        ]
    },
    "files": [
        "src/test.ts"
    ],
    "include": [
        "**/*.spec.ts",
        "**/*.d.ts"
    ],
    "exclude": [
        "**/backend-only-untested.*"
    ]
}
